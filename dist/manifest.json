{
  "name": "Akashi Master",
  "description" : "AKASHIの退勤絶対に押し忘れないマン",
  "version": "0.0.2",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "js/background_script.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://atnd.ak4.jp/*"
      ],
      "js": [
        "js/content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "img/icon_16.png"
  }
}